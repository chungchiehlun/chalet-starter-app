{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "publish": "node tasks/publish.js",
    "create-react-app": "node tasks/cra.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "devDependencies": {
    "fs-extra": "^7.0.0",
    "husky": "^1.0.0-rc.14",
    "lerna": "^3.3.0",
    "lint-staged": "^7.2.2",
    "prettier": "1.14.3"
  }
}
