{
  "private": true,
  "name": "chalet",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "publish": "node tasks/publish.js",
    "create-starter-app": "node tasks/csa.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "devDependencies": {
    "fs-extra": "^7.0.0",
    "husky": "^1.0.0-rc.14",
    "lerna": "^3.3.0",
    "lint-staged": "^7.2.2"
  }
}
